extend base.pug

block content
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        input(placeholder="Usr Name" type="text", name="username", required)
        input(placeholder="Password" type="password", name="password", required)
        input(type="submit", value="Join")
    hr
    div
        span Don't have an account? 
        a(href="/join") Join in now &rarr;