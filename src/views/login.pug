extend base.pug

block content
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        input(placeholder="User Name" type="text", name="username", required)
        input(placeholder="Password" type="password", name="password", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=7b1583705402323bc028&allow_signup=false") Continue with Github &rarr;
    hr
    div
        span Don't have an account? 
        a(href="/join") Join in now &rarr;